// User function template for C++
class Solution {
  public:

    int subsequenceSum(string s) {
        // Your code goes here
        int len = s.size();
        int ans = 0;
        
        for (int i = 0; i < len; i++){
            ans += s[i] - '0';
        }
        
        len = pow(2,len-1);
        ans *= len;
        return ans;
    }
};
