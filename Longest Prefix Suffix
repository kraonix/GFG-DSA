class Solution {
  public:
    int getLPSLength(string &s) {
        int n = s.size();

        for (int i = n - 1; i > 0; i--) {
            if (s[i - 1] == s[n - 1]) {   
                
                string prefix = s.substr(0, i);
                string suffix = s.substr(n - i, i);
                
                if (prefix == suffix) {
                    return i;
                }
            }
        }
        
        return 0;
    }
};
